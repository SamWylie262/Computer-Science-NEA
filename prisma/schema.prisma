generator client {
  provider = "dart run orm"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model cards {
  card_id  Int     @id @default(autoincrement())
  deck_id  Int?
  question String? @db.VarChar(255)
  answer   String? @db.VarChar(255)
  due      Int?
  tag_id   Int?
  decks    decks?  @relation(fields: [deck_id], references: [deck_id], onDelete: NoAction, onUpdate: NoAction)
  tags     tags?   @relation(fields: [tag_id], references: [tag_id], onDelete: NoAction, onUpdate: NoAction)
}

model custom_study {
  customid   Int  @id @default(autoincrement())
  custom_due Int?
}

model decks {
  deck_id     Int     @id @default(autoincrement())
  user_id     Int?
  title       String? @db.VarChar(255)
  datecreated String? @db.VarChar(255)
  cards       cards[]
  users       users?  @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
}

model tags {
  tag_id   Int     @id @default(autoincrement())
  tag_name String? @db.VarChar(255)
  cards    cards[]
}

model users {
  user_id       Int     @id @default(autoincrement())
  username      String? @db.VarChar(255)
  password_hash String? @db.VarChar(255)
  decks         decks[]
}
